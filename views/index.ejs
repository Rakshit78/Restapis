<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs')%>
<body>
  <!--<% const title = "Ourtitle"%>-->
  <!--<%=JSON.stringify(items)%>-->
   <%-include('./partials/nav.ejs')%>
     <div class="container">
      <ul class="collection with-header">
        
        <%  if(items.length>0)
          {%>
          
            <% items.forEach(item => {%>
              <li class="collection-item"><div><a href='/items/<%= item._id%>'><%=item.name%> $<%=item.price%></a>
                <a href='!#' class="secondary-content">
                  <i id='deleteBtn'class="material-icons" data-id="<%=item._id%>">delete</i>
                <i class="material-icons modal-trigger" href="#modal1">edit</i>
              </a></div></li>
            <% });%>
           
         <% }else{%>
           <li>There are no items</li>
          <%}%>
        
        
        
        
      </ul>
    </div>
    <!---->
    <div id="modal1" class="modal">
      <div class="modal-content">
        <h4>Edit Form</h4>
        <form id="edit_form">
          <input type="text" name="name" placeholder="item name">
          <input type="number" name="price" placeholder="item price">
          <button class="btn">Update</button>
        </form>
      </div>
     
    </div>
    <!---->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
      <script>
      document.addEventListener('DOMContentLoaded', function() {
      var elems = document.querySelectorAll('.modal');
      var instances = M.Modal.init(elems);
      });

      

    </script>
</body>
</html>